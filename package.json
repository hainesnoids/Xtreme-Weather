{
    "name": "xtreme-weather",
    "version": "1.0.0",
    "description": "Advanced Weather Radar",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "windows:build": "electron-builder --win",
        "mac:build": "electron-builder --mac",
        "linux:build": "electron-builder --linux",
        "linux:build-unpacked": "electron-builder --linux --dir",
        "linux:build-appimage": "electron-builder --linux appimage"
    },
    "keywords": [],
    "author": "hainesnoids",
    "homepage": "https://github.com/hainesnoids/Xtreme-Weather",
    "license": "AGPL-3.0-only",
    "build": {
        "appId": "net.ws4k.XtremeWeather",
        "productName": "Xtreme Weather",
        "artifactName": "XtremeWeather-${arch}.${ext}",
        "linux": {
            "icon": "./assets/icon.svg",
            "synopsis": "Advanced Weather Radar",
            "category": "Internet",
            "desktop": {
                "entry": {
                    "Name": "Xtreme Weather",
                    "Type": "Application",
                    "Categories": "AudioVideo;",
                    "Keywords": "Weather;WX;Radar;"
                }
            },
            "maintainer": "hainesnoids@ws4k.net",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "./assets/icon.ico",
            "artifactName": "Xtreme Weather-${arch}-Portable.zip",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "nsis": {
            "artifactName": "Xtreme_Weather-Setup.${ext}",
            "uninstallDisplayName": "Xtreme Weather",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "perMachine": false
        },
        "mac": {
            "icon": "./assets/icon.icns",
            "category": "public.app-category.internet",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "universal"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github",
            "owner": "hainesnoids",
            "repo": "Xtreme-Weather"
        }
    },
    "devDependencies": {
        "electron": "^39.4.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "electron-updater": "^6.7.3",
        "minimist": "^1.2.8"
    }
}
